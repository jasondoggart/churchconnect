<%= form_for @announcement do |form| %>
  <% if @announcement.errors.any? %>
    <h2><%= pluralize(@announcement.errors.count, "error") %> need to be corrected to proceed.</h2>
    <ul>
    <% @announcement.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  <div class="row">
    <label class="col-md-3 label-on-left">Announcement Subject</label>
    <div class="col-md-9">
      <div class="form-group label-floating is-empty">
        <label class="control-label"></label>
        <%= form.text_field :subject, id: :announcement_subject, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <label class="col-md-3 label-on-left">Description</label>
    <div class="col-md-9">
      <div class="form-group label-floating is-empty">
        <label class="control-label"></label>
        <%= form.text_field :text, id: :announcement_text, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <label class="col-md-3 label-on-left">Ministry</label>
    <div class="col-md-9">
      <div class="form-group label-floating is-empty">
        <label class="control-label"></label>
        <%= form.collection_select :ministry_id, @ministries, :id, :name, {prompt: 'Choose Ministry'}, {class: 'form-control'} %>
      </div>
    </div>
  </div>
  <div class="row">
    <label class="col-md-3 label-on-left"></label>
    <div class="form-group form-button">
      <%= form.submit @announcement.new_record? ? "Create Announcement" : "Update Announcement", class: 'btn btn-fill btn-rose' %>
    </div>
  </div>
<% end %>
