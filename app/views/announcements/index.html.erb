<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header" data-background-color="green">
        <h4 class="card-title">
          Announcements<br />
          <%= link_to '<p class="category">Add New</p>'.html_safe, new_announcement_path %>
        </h4>
      </div>
      <div class="card-content">
        <% @announcements.each do |announcement| %>
          <div class="col-md-4">
            <div class="card card-product">
              <div class="card-image" data-header-animation="false">
                <%= link_to image_tag('card-2.jpeg'), announcement_path(announcement), class: 'img' %>
              </div>
              <div class="card-content")>
                <h4 class="card-title">
                  <%= link_to announcement.subject, announcement_path(announcement) %>
                </h4>
                <div class="card-description">
                  <%= announcement.text %>
                </div>
              </div>
              <div class="card-footer">
                <div class="stats">
                  <p class="category">
                    <%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_announcement_path(announcement) %>
                    <%= link_to '<i class="material-icons">delete</i>'.html_safe, announcement, method: :delete, data: { confirm: 'Are you sure?' } %>
                </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
