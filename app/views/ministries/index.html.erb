<div class="wrapper sidebar-mini">
  <%= render 'layouts/sidebar' %>
  <div class="main-panel">
    <%= render 'layouts/dashboard_nav' %>
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title">
                  All Ministries<br />
                  <% if current_user.admin? %>
                    <%= link_to '<p class="category">Add New</p>'.html_safe, new_ministry_path %>
                  <% end %>
                </h4>
              </div>
              <div class="card-content">
                <div class="row">
                  <%= will_paginate @ministries, renderer: BootstrapPagination::Rails %>
                </div>
                <%= render @ministries %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
