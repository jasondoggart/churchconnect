<div class="wrapper">
  <%= render 'layouts/sidebar' %>
  <div class="main-panel">
    <%= render 'layouts/dashboard_nav' %>
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <div class="card card-profile">
              <div class="card-avatar">
                <%= image_tag('faces/marc.jpg') %>
              </div>
              <div class="card-content">
                <h4 class="card-title">
                  <%= @ministry.name %>
                </h4>
                <p class="description">
                  <%= @ministry.description %>
                </p>
                <%= link_to 'Follow', '#', class: 'btn btn-rose btn-round' %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header" data-background-color="green">
                <h4 class="card-title">
                  Upcoming Events<br />
                  <p class="category">See all events</p>
                  <%= link_to '<p class="category">Add new</p>'.html_safe, new_event_path %>
                </h4>
              </div>
              <div class="card-content">
                <% @ministry.events.each do |event| %>
                  <div class="col-md-4">
                    <div class="card card-product">
                      <div class="card-image" data-header-animation="false">
                        <a href="#pablo">
                          <img class="img" src="<%= image_path('card-2.jpeg') %>">
                        </a>
                      </div>
                      <div class="card-content">
                        <h4 class="card-title">
                          <%= link_to event.name, event_path(event) %>
                        </h4>
                        <div class="card-description">
                          <%= event.description %>
                        </div>
                      </div>
                      <div class="card-footer">
                        <div class="price">
                          <h4>Will insert dates here</h4>
                        </div>
                        <div class="stats pull-right">
                          <p class="category"><i class="material-icons">place</i><%= @ministry.name %></p>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header" data-background-color="green">
                <h4 class="card-title">
                  Recent Announcements<br />
                  <p class="category">See all Announcements</p>
                </h4>
              </div>
              <div class="card-content">
                list new announcements for the ministry here
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header" data-background-color="green">
                <h4 class="card-title">
                  Opportunities to Serve<br />
                  <p class="category">See all Opportunities</p>
                </h4>
              </div>
              <div class="card-content">
                list new announcements for the ministry here
              </div>
            </div>
          </div>
        </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
