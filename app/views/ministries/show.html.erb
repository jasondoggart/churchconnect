<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="card card-profile">
      <div class="card-avatar">
        <%= image_tag('faces/marc.jpg') %>
      </div>
      <div class="card-content">
        <h4 class="card-title">
          <%= @ministry.name %>
        </h4>
        <p class="description">
          <%= @ministry.description %>
        </p>
        <% if current_user.following?(@ministry) %>
          <%= render 'unfollow' %>
        <% else %>
          <%= render 'follow' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header" data-background-color="green">
        <h4 class="card-title">
          Upcoming Events<br />
          <p class="category">See all events</p>
          <%= link_to '<p class="category">Add new</p>'.html_safe, new_event_path %>
        </h4>
      </div>
      <div class="card-content">
        <% @ministry.events.each do |event| %>
          <div class="col-md-4">
            <div class="card card-product">
              <div class="card-image" data-header-animation="false">
                <a href="#pablo">
                  <img class="img" src="<%= image_path('card-2.jpeg') %>">
                </a>
              </div>
              <div class="card-content">
                <h4 class="card-title">
                  <%= link_to event.name, event_path(event) %>
                </h4>
                <div class="card-description">
                  <%= event.description %>
                </div>
              </div>
              <div class="card-footer">
                <div class="price">
                  <h4>Will insert dates here</h4>
                </div>
                <div class="stats pull-right">
                  <p class="category"><i class="material-icons">place</i><%= @ministry.name %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header" data-background-color="green">
        <h4 class="card-title">
          Recent Announcements<br />
          <%= link_to '<p class="category">See all Announcements</p>'.html_safe, announcements_path %>
          <%= link_to '<p class="category">Create New Announcement</p>'.html_safe, new_announcement_path %>
        </h4>
      </div>
      <div class="card-content">
        <div class="panel-group" id="ministry-announcement-accordion" role="tablist" aria-multiselectable="true">
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="test-heading">
              <a role="button" data-toggle="collapse" data-parent="#ministry-announcement-accordian" href="#test-announcement-collapse" aria-expanded="true" aria-controls "test-announcement-collapse">
                <h4 class="panel-title">
                  Test Announcement<br />
                  <small>Date</small>
                  <i class="material-icons">keyboard_arrow_down</i>
                </h4>
              </a>
            </div>
            <div id="test-announcement-collapse" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="test-heading">
              <div class="panel-body">
                Testing to see if this works.
              </div>
            </div>
            <% @ministry.announcements.each do |announcement| %>
              <div class="panel-heading" role="tab" id="announcement-heading-<%= announcement.id %>">
                <a role="button" data-toggle="collapse" data-parent="#ministry-announcement-accordian" href="#announcement-collapse-<%= announcement.id %>" aria-expanded="false" aria-controls "announcement-collapse-<%= announcement.id %>">
                  <h4 class="panel-title">
                    <%= announcement.subject %><br />
                    <small><%= announcement.created_at %></small>
                    <i class="material-icons">keyboard_arrow_down</i>
                  </h4>
                </a>
              </div>
              <div id="announcement-collapse-<%= announcement.id %>" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="announcement-heading-<%= announcement.id %>">
                <div class="panel-body">
                  <%= announcement.text %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header" data-background-color="green">
        <h4 class="card-title">
          Opportunities to Serve<br />
          <p class="category">See all Opportunities</p>
        </h4>
      </div>
      <div class="card-content">
        list new announcements for the ministry here
      </div>
    </div>
  </div>
</div>
  </div>
</div>
