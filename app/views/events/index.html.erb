<div class="wrapper">
  <%= render 'layouts/sidebar' %>
  <div class="main-panel">
    <%= render 'layouts/dashboard_nav' %>
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header" data-background-color="green">
                <h4 class="card-title">
                  Events<br />
                  <%= link_to '<p class="category">Add New</p>'.html_safe, new_ministry_path %>
                </h4>
              </div>
              <div class="card-content">
                <% @events.each do |event| %>
                  <div class="col-md-4">
                    <div class="card card-product">
                      <div class="card-image" data-header-animation="false">
                        <%= link_to image_tag('card-2.jpeg'), event_path(event), class: 'img' %>
                      </div>
                      <div class="card-content")>
                        <h4 class="card-title">
                          <%= link_to event.name, event_path(event) %>
                        </h4>
                        <div class="card-description">
                          <%= event.description %>
                        </div>
                      </div>
                      <div class="card-footer">
                        <div class="stats">
                          <p class="category">
                            <%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_event_path(event) %>
                            <%= link_to '<i class="material-icons">delete</i>'.html_safe, event, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </p>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

