<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-icon" data-background-color="green">
        <i class="material-icons">bookmark_border</i>
      </div>
      <div class="card-content">
        <h4 class="card-title">
          Memory Verses</br>
          <%= link_to '<small>See them all</small>'.html_safe, memory_verses_path %>
        </h4>
        <div class="row">
          <% @memory_verses.limit(3).each do |verse| %>
            <div class="col-md-4">
              <div class="card">
                <div class="card-header" data-background-color="green">
                  <h4 class="card-title">
                    <%= verse.verse_date.strftime('%B %e, %Y') %><br />
                  </h4>
                </div>
                <div class="card-content">
                  <div class="row">
                    <div class="col-md-12">
                      <blockquote>
                        <p>
                          <%= verse.verse %>
                        </p>
                        <small>
                          <%= verse.reference %>
                        </small>
                      </blockquote>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-icon" data-background-color="orange">
        <i class="material-icons">notifications</i>
      </div>
      <div class="card-content">
        <h4 class="card-title">Latest Announcements</h4>
        <div class="table-responsive">
          <table class="table table-shopping">
            <thead>
              <tr>
                <th></th>
                <th class="th-description">Announcement</th>
                <th class="th-description">Details</th>
              </tr>
            </thead>
            <tbody>
              <% @user.followed_announcements.each do |ann| %>
                <tr>
                  <td>
                    <div class="img-container">
                      <%= image_tag('card-2.jpg') %>
                    </div>
                  </td>
                  <td>
                    <b><%= ann.subject %></b>
                  </td>
                  <td>
                    <%= ann.text %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="card-footer">
        <div class="stats">
          <p class="category"><i class="material-icons">arrow_forward</i><a href='#'> See more</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-icon" data-background-color="blue">
        <i class="material-icons">event</i>
      </div>
      <div class="card-content">
        <h4 class="card-title">
          Upcoming Events You're Following<br />
          <small><%= link_to 'See all events', '#' %></small>
        </h4>
        <% @user.followed_events.each do |event| %>
          <div class="col-md-4">
            <div class="card card-product">
              <div class="card-image" data-header-animation="false">
                <a href="#pablo">
                  <img class="img" src="<%= image_path('card-2.jpeg') %>">
                </a>
              </div>
              <div class="card-content">
                <h4 class="card-title">
                  <%= link_to event.name, event_path(event) %>
                </h4>
                <div class="card-description">
                  <%= event.description %>
                </div>
              </div>
              <div class="card-footer">
                <div class="price">
                  <h4>Event date</h4>
                </div>
                <div class="stats pull-right">
                  <p class="category"><i class="material-icons">place</i>The Fuse</p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
