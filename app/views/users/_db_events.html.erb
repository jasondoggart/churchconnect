<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
          Newest Events for Ministries You Follow<br />
          <p class="category"><%= link_to 'See all events', events_path %></p>
        </h3>
      </div>
      <div class="card-content">
        <% @user.followed_events.take(3).each do |event| %>
          <%= render partial: 'events/event', object: event %>
        <% end %>
      </div>
      <% if current_user.admin? %>
        <div class="card-footer">
          <%= link_to 'add new event', new_event_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
