  <div class="sidebar" data-active-color="green" data-background-color="black" data-image="<%= image_path('sidebar-1.jpg') %>">
    <!--
      Tip 1: You can change the color of active element of the sidebar using: data-active-color="purple | blue | green | orange | red | rose"
      Tip 2: you can also add an image using data-image tag
      Tip 3: you can change the color of the sidebar with data-background-color="white | black"
    -->
    <div class="logo">
      <a href="#" class="simple-text logo-mini">
        
      </a>
      <a href="#" class="simple-text logo-normal">
        GT Connect
      </a>
    </div>
    <div class="sidebar-wrapper">
      <div class="user">
        <div class="photo">
          <img src="<%= image_path('faces/avatar.jpg') %>" />
        </div>
        <div class="info">
          <a data-toggle="collapse" href="#collapseExample" class="collapsed">
            <span>
              <%= @user.first_name %> <%= @user.last_name %>
              <b class="caret"></b>
            </span>
          </a>
          <div class="clearfix"></div>
            <div class="collapse" id="collapseExample">
              <ul class="nav">
                <li>
                  <%= link_to '
                    <span class="sidebar-mini"><i class="material-icons">account_circle</i></span>
                    <span class="sidebar-normal">My Profile</span>'.html_safe, 
                    edit_user_registration_path
                  %>
                </li>
                <li>
                  <a href="#">
                    <span class="sidebar-mini"><i class="material-icons">settings</i></span>
                    <span class="sidebar-normal">Settings</span>
                  </a>
                </li>
                <li>
                  <%= link_to '
                    <span class="sidebar-mini"><i class="material-icons">arrow_back</i></span>
                    <span class="sidebar-normal"> Sign Out'.html_safe, destroy_user_session_path, method: :delete %></span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <ul class="nav">
          <li class="active">
            <%= link_to '
              <i class="material-icons">dashboard</i>
              <p>Dashboard</p>'.html_safe, users_show_path(current_user) %>
          </li>
          <li>
            <a data-toggle="collapse" href="#pagesExamples">
              <i class="material-icons">people</i>
              <p>Ministries I Follow
                <b class="caret"></b>
              </p>
            </a>
            <div class="collapse" id="pagesExamples">
              <ul class="nav">
                <% current_user.following.each do |ministry| %>
                  <li>
                    <%= link_to "<span class='sidebar-mini'><i class='material-icons'>keyboard_arrow_right</i></span>
                    <span class='sidebar-normal'>#{ministry.name}</span>".html_safe, ministry_path(ministry) %>
                  </li>
                <% end %>
                <li>
                  <%= link_to '
                    <span class="sidebar-mini">A</span>
                    <span class="sidebar-normal">See All Ministries</span>'.html_safe, 
                    ministries_path %>
                </li>
              </ul>
            </div>
          </li>
        </li>
        <li>
          <%= link_to '
            <i class="material-icons">bookmark</i>
            <p>Memory Verses</p>'.html_safe, memory_verses_path %>
        </li>
        <li>
          <%= link_to '
            <i class="material-icons">announcement</i>
            <p>Announcements</p>'.html_safe, announcements_path %>
        </li>
        <li>
          <a href="./charts.html">
            <i class="material-icons">mail_outline</i>
          <p>Messages</p>
        </a>
      </li>
      <li>
        <a href="./calendar.html">
          <i class="material-icons">date_range</i>
          <p>Calendar</p>
        </a>
      </li>
    </ul>
  </div>
</div>
