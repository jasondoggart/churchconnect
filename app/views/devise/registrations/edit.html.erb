  <div class="main-panel">
    <%= render 'layouts/dashboard_nav' %>
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-8">
            <div class="card">
              <div class="card-header">
                <h3>Your Profile
                  <p class="category">
                    update the fields below to help us stay in touch with you
                  </p>
                </h3>
              </div>
